@using Umbraco.Web.Models
@inherits UmbracoViewPage
    
@{
    var links = Umbraco.AssignedContentItem.GetPropertyValue<RelatedLinks>("footerSocialLinks", true);
}

<section id="footer" class="wrapper  split style2">
    <div class="inner">
        <section>
            <header>
                @Umbraco.Field("footerTitle", insertBefore: "<h3>", insertAfter: "</h3>", recursive: true)
            </header>
            @Umbraco.Field("footerContent", recursive: true)
            @if (links != null && links.Any())
            {
                <ul class="icons">
                    @foreach (var link in links)
                    {
                        <li><a href="@link.Link" class="icon fa-@link.Caption" target="@(link.NewWindow ? "_blank" : null)"><span class="label">@link.Caption</span></a></li>
                    }
                </ul>
            }
        </section>
        <section>
                @{ Html.RenderAction("RenderForm", "Contact"); }
        </section>
    </div>
    <div class="copyright">
        <p>&copy; Untitled. All rights reserved. Lorem ipsum dolor sit amet nullam.</p>
    </div>
</section>