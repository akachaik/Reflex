@using Umbraco.Web.Models
@inherits UmbracoViewPage
    
@{
    var links = Umbraco.AssignedContentItem.GetPropertyValue<RelatedLinks>("footerSocialLinks");
}

<section id="footer" class="wrapper  split style2">
    <div class="inner">
        <section>
            <header>
                @Umbraco.Field("footerTitle", insertBefore: "<h3>", insertAfter: "</h3>")
            </header>
            @Umbraco.Field("footerContent")
            @if (links != null && links.Any())
            {
                <ul class="icons">
                    @foreach (var link in links)
                    {
                        <li><a href="@link.Link" class="icon fa-@link.Caption" target="@(link.NewWindow ? "_blank" : null)"><span class="label">@link.Caption</span></a></li>
                    }
                </ul>
            }
        </section>
        <section>
            <form method="post" action="#">
                <div class="field half first">
                    <input type="text" name="name" id="name" placeholder="Name" />
                </div>
                <div class="field half">
                    <input type="email" name="email" id="email" placeholder="Email" />
                </div>
                <div class="field">
                    <textarea name="message" id="message" placeholder="Message" rows="4"></textarea>
                </div><ul class="actions"><li><input type="submit" value="Send Message" /></li></ul>
            </form>
        </section>
    </div>
    <div class="copyright">
        <p>&copy; Untitled. All rights reserved. Lorem ipsum dolor sit amet nullam.</p>
    </div>
</section>