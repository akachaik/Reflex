@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "WebBase.cshtml";
	
	var imageUrl = Model.Content.GetPropertyValue<IPublishedContent>("mainImage").Url + "?width=1024&height=478&mode=crop&anchor=center";
}

@* the fun starts here *@
<section id="main" class="wrapper style1">
    <div class="inner">
        <header class="major">
            <h1>@Umbraco.Field("pageTitle", altFieldAlias:"pageName")</h1>
            <p>@Umbraco.Field("subtitle")</p>
        </header><span class="image main"><img src="@imageUrl" alt="" /></span>
        @Umbraco.Field("mainContent")
    </div>
</section>
